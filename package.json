{
  "name": "pulpo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:website": "turbo run build --filter=@pulpo/website",
    "dev": "turbo run dev",
    "dev:agenda": "turbo run dev --filter=agenda",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=18"
  }
}
