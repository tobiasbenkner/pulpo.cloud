---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import logo from '../assets/logo.webp';
import contact from '../data/contact.json';
---

<Layout title="Soporte | Pulpo Agenda">
  <div class="min-h-screen-safe flex flex-col justify-center items-center relative bg-surface py-8 md:py-12">

    <div class="absolute top-0 left-0 w-full h-64 bg-gradient-to-b from-surface-alt to-transparent opacity-50 pointer-events-none"></div>

    <div class="mb-6 md:mb-8 z-10">
      <Image src={logo} alt="Pulpo" width={80} height={80} class="rounded-2xl shadow-lg ring-4 ring-border-light md:w-24 md:h-24" />
    </div>

    <div class="w-full flex justify-center z-10 px-4">
      <div class="w-full max-w-md bg-surface p-6 md:p-12 shadow-sm border border-border-light rounded-lg">
        <div class="text-center mb-6 md:mb-10">
          <h1 class="text-2xl md:text-3xl font-serif text-fg mb-1">Soporte</h1>
          <p class="text-fg-muted font-light text-sm">Estamos aquí para ayudarte</p>
        </div>

        <div class="space-y-3">
          <a
            href={`mailto:${contact.email}`}
            class="w-full flex items-center gap-4 px-4 py-3.5 rounded-sm border border-border-default hover:bg-surface-hover transition-all group"
          >
            <div class="w-10 h-10 rounded-full bg-surface-alt flex items-center justify-center shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-fg-muted group-hover:text-fg-secondary transition-colors"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
            </div>
            <div class="min-w-0">
              <div class="text-sm font-medium text-fg-secondary">Email</div>
              <div class="text-xs text-fg-muted truncate">{contact.email}</div>
            </div>
          </a>

          <a
            href={`https://wa.me/${contact.whatsapp}`}
            target="_blank"
            rel="noopener noreferrer"
            class="w-full flex items-center gap-4 px-4 py-3.5 rounded-sm border border-border-default hover:bg-surface-hover transition-all group"
          >
            <div class="w-10 h-10 rounded-full bg-surface-alt flex items-center justify-center shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="text-fg-muted group-hover:text-fg-secondary transition-colors"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
            </div>
            <div class="min-w-0">
              <div class="text-sm font-medium text-fg-secondary">WhatsApp</div>
              <div class="text-xs text-fg-muted">{contact.phone}</div>
            </div>
          </a>

          <a
            href={`tel:${contact.phone.replace(/\s/g, '')}`}
            class="w-full flex items-center gap-4 px-4 py-3.5 rounded-sm border border-border-default hover:bg-surface-hover transition-all group"
          >
            <div class="w-10 h-10 rounded-full bg-surface-alt flex items-center justify-center shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-fg-muted group-hover:text-fg-secondary transition-colors"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            </div>
            <div class="min-w-0">
              <div class="text-sm font-medium text-fg-secondary">Teléfono</div>
              <div class="text-xs text-fg-muted">{contact.phone}</div>
            </div>
          </a>
        </div>

        <div class="mt-6 md:mt-8 text-center border-t border-border-light pt-4 md:pt-6">
          <a
            href="/login"
            class="inline-flex items-center gap-2 text-sm text-fg-muted hover:text-fg-secondary transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
            Volver al inicio de sesión
          </a>
        </div>
      </div>
    </div>

    <footer class="mt-8 md:mt-12 text-center text-xs text-fg-muted">
      <p>&copy; {new Date().getFullYear()} Pulpo Cloud. Todos los derechos reservados.</p>
    </footer>

  </div>
</Layout>
