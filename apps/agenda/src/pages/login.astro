---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/LoginForm.svelte';
import AuthGuard from '../components/AuthGuard.svelte';

// Wir nutzen den AuthGuard hier mit protect={false}, nur um zu prüfen, 
// ob der User vielleicht schon eingeloggt ist (optionales Redirect Feature),
// oder wir lassen es einfach plain rendern.
---

<Layout title="Login | Pulpo Agenda">
  <div class="min-h-screen flex flex-col justify-center items-center relative bg-surface overflow-hidden">
    
    <!-- Dekorativer Hintergrund (Subtil) -->
    <div class="absolute top-0 left-0 w-full h-64 bg-gradient-to-b from-gray-100 to-transparent opacity-50 pointer-events-none"></div>

    <!-- Logo Area -->
    <div class="mb-8 z-10">
       <!-- Hier dein Logo SVG oder Image -->
       <div class="w-12 h-12 bg-primary text-white flex items-center justify-center font-serif text-2xl rounded-sm shadow-lg">
         P
       </div>
    </div>

    <!-- Login Komponente -->
    <div class="w-full flex justify-center z-10 px-4">
      <!-- client:only ist notwendig für Browser-APIs (Cookies/Window) -->
      <LoginForm client:only="svelte" />
    </div>

    <!-- Footer -->
    <footer class="mt-12 text-center text-xs text-gray-400">
      <p>&copy; {new Date().getFullYear()} Pulpo Cloud. Todos los derechos reservados.</p>
    </footer>

  </div>
</Layout>