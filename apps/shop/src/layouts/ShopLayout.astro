---
import "../styles/global.css";
---

<!doctype html>
<html lang="de" class="antialiased bg-zinc-50">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>POS System</title>
  </head>
  <!-- Grid Layout: Sidebar fixiert rechts -->
  <body class="h-screen w-screen overflow-hidden grid grid-cols-[1fr_340px]">
    <!-- Linker Bereich: Jetzt eine Flex-Column ohne eigenes Scrollen -->
    <main class="h-full flex flex-col relative overflow-hidden bg-zinc-50">
      <slot />
    </main>

    <!-- Rechter Bereich (Sidebar) -->
    <slot name="sidebar" />

    <!-- Modal Layer -->
    <slot name="modal" />

    <!-- Globale Scripts -->
    <script>
      import { addToCart, removeFromCart } from "../stores/cartStore";

      // @ts-ignore
      window.shop = {
        add: (jsonStr: string) => {
          const product = JSON.parse(jsonStr);
          addToCart(product);
        },
        remove: (id: string) => {
          removeFromCart(id);
        },
      };
    </script>
  </body>
</html>
