---
// apps/shop/src/components/CartSidebar.astro
import LastChangeWidget from "./LastChangeWidget.astro";
---

<aside
  class="flex flex-col h-full w-full bg-white shadow-2xl z-20 border-l border-zinc-200 overflow-hidden relative"
>
  <!-- === HEADER === -->
  <div
    class="flex-none flex flex-col gap-3 px-4 py-4 border-b border-zinc-100 bg-white z-20 relative"
  >
    <div class="flex justify-between items-center">
      <div class="flex items-center gap-2">
        <h2 class="text-base font-bold text-zinc-900 tracking-tight">
          Auftrag
        </h2>
        <span
          class="text-zinc-400 text-[10px] font-bold bg-zinc-100 px-2 py-0.5 rounded-full uppercase tracking-wide"
        >
          <span id="cart-count">0</span> Pos.
        </span>
      </div>

      <div class="flex items-center gap-1">
        <button
          id="btn-park"
          class="p-2 text-zinc-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors group relative"
          title="Warenkorb parken"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"
            ></path></svg
          >
        </button>

        <button
          id="btn-show-parked"
          class="hidden relative p-2 text-orange-500 hover:bg-orange-50 rounded-lg transition-colors"
          title="Geparkte Aufträge"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg
          >
          <span class="absolute top-1.5 right-1.5 flex h-2 w-2">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"
            ></span>
            <span
              class="relative inline-flex rounded-full h-2 w-2 bg-orange-500"
            ></span>
          </span>
        </button>
      </div>
    </div>
    <LastChangeWidget />
  </div>

  <!-- === OVERLAY: GEPARKTE AUFTRÄGE === -->
  <div
    id="parked-list-overlay"
    class="absolute inset-0 top-[130px] z-30 bg-zinc-50/95 backdrop-blur-sm p-3 hidden flex-col gap-3 overflow-y-auto animate-in fade-in slide-in-from-top-4 duration-200"
  >
    <div
      class="flex justify-between items-center mb-1 border-b border-zinc-200 pb-2"
    >
      <h3 class="text-xs font-bold text-zinc-400 uppercase tracking-widest">
        Warteschlange
      </h3>
      <button
        id="close-parked-list"
        class="p-1 text-zinc-400 hover:text-zinc-600"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path></svg
        >
      </button>
    </div>
    <div id="parked-items-container" class="space-y-2 pb-10"></div>
  </div>

  <!-- === LISTE === -->
  <div class="flex-1 min-h-0 relative bg-white group">
    <div
      class="absolute top-0 left-0 right-0 h-6 bg-gradient-to-b from-white to-transparent z-10 pointer-events-none opacity-0 transition-opacity duration-300"
      id="top-scroll-shadow"
    >
    </div>
    <div
      id="cart-list"
      class="absolute inset-0 overflow-y-auto divide-y divide-zinc-100 scroll-smooth pb-2"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 right-0 h-8 bg-gradient-to-t from-zinc-50 to-transparent z-10 pointer-events-none"
    >
    </div>
  </div>

  <!-- === FOOTER === -->
  <div
    class="flex-none p-4 bg-zinc-50 border-t border-zinc-200 shadow-[0_-4px_10px_-2px_rgba(0,0,0,0.05)] z-20 relative"
  >
    <!-- 1. Bereich: Zahlen & Fakten -->
    <div class="space-y-1 mb-4">
      <!-- Mehr Abstand nach unten -->

      <!-- Zwischensumme (Conditional) -->
      <div
        id="row-subtotal"
        class="hidden justify-between text-zinc-400 text-sm pb-1"
      >
        <span>Zwischensumme</span>
        <span id="val-subtotal" class="font-medium">0.00 €</span>
      </div>

      <!-- Rabatt Wert (Conditional) -->
      <div
        id="row-discount"
        class="hidden justify-between text-orange-600 text-sm font-bold border-b border-zinc-200/50 pb-2 mb-2"
      >
        <span class="flex items-center gap-1">
          Gesamtrabatt
          <span
            id="lbl-discount-percent"
            class="text-[10px] bg-orange-100 px-1 rounded ml-1 font-normal hidden"
          ></span>
        </span>
        <span id="val-discount">-0.00 €</span>
      </div>

      <!-- Steuer-Aufschlüsselung -->
      <div id="tax-breakdown" class="space-y-0.5"></div>

      <!-- TOTAL GROSS -->
      <div
        class="pt-3 border-t border-zinc-200 flex justify-between items-baseline mt-2"
      >
        <span class="text-zinc-900 font-bold text-xl">Gesamt</span>
        <span
          id="total-gross"
          class="text-3xl font-extrabold text-zinc-900 tracking-tight leading-none"
          >0.00 €</span
        >
      </div>
    </div>

    <!-- 2. Bereich: Große Buttons -->
    <div class="flex flex-col gap-3">
      <!-- NEU: Großer Rabatt Button -->
      <button
        id="btn-global-discount"
        onclick="window.cartActions.openGlobalDiscount()"
        class="w-full py-3 rounded-xl border-2 border-dashed border-zinc-300 text-zinc-500 font-bold text-sm hover:border-zinc-400 hover:bg-zinc-100 hover:text-zinc-800 transition-all flex items-center justify-center gap-2 active:scale-[0.98]"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
          ></path></svg
        >
        <span>Rabatt</span>
      </button>

      <!-- Checkout Button -->
      <button
        id="checkout-btn"
        class="w-full bg-zinc-900 text-white font-medium text-lg py-4 rounded-xl hover:bg-black active:scale-[0.98] transition-all disabled:opacity-30 disabled:cursor-not-allowed shadow-lg shadow-zinc-200"
        disabled
      >
        Bezahlen
      </button>
    </div>
  </div>
</aside>

<script>
  import {
    cartItems,
    cartTotals,
    isPaymentModalOpen,
    isDiscountModalOpen,
    globalDiscount,
    addToCart,
    decreaseQuantity,
    parkCurrentCart,
    restoreParkedCart,
    parkedCarts,
    deleteParkedCart,
    isQuantityModalOpen,
  } from "../stores/cartStore";
  import Big from "big.js";

  // --- TYPESCRIPT DEFINITIONEN ---
  declare global {
    interface Window {
      cartActions: {
        add: (jsonStr: string) => void;
        decrease: (id: string) => void;
        openDiscount: (id: string) => void;
        openGlobalDiscount: () => void;
        openQuantity: (id: string) => void; // NEU
      };
      parkActions: {
        restore: (id: string) => void;
        delete: (id: string) => void;
      };
    }
  }

  // --- GLOBALE FUNKTIONEN ---
  window.cartActions = {
    add: (jsonStr: string) => addToCart(JSON.parse(jsonStr)),
    decrease: (id: string) => decreaseQuantity(id),
    openDiscount: (id: string) => isDiscountModalOpen.set({ itemId: id }),
    openGlobalDiscount: () => isDiscountModalOpen.set({ itemId: "GLOBAL" }),
    openQuantity: (id: string) => {
      isQuantityModalOpen.set({ itemId: id });
    },
  };

  window.parkActions = {
    restore: (id: string) => {
      restoreParkedCart(id);
      hideParkedOverlay();
    },
    delete: (id: string) => deleteParkedCart(id),
  };

  // --- DOM ELEMENTE ---
  const listEl = document.getElementById("cart-list")!;
  const btnCheckout = document.getElementById(
    "checkout-btn",
  ) as HTMLButtonElement;
  const countEl = document.getElementById("cart-count")!;

  const taxBreakdownEl = document.getElementById("tax-breakdown")!;
  const grossEl = document.getElementById("total-gross")!;

  const rowSubtotal = document.getElementById("row-subtotal")!;
  const valSubtotal = document.getElementById("val-subtotal")!;
  const rowDiscount = document.getElementById("row-discount")!;
  const valDiscount = document.getElementById("val-discount")!;
  const lblDiscountPercent = document.getElementById("lbl-discount-percent")!;

  // Rabatt Button für Styling Updates
  const btnGlobalDiscount = document.getElementById("btn-global-discount")!;

  const topShadow = document.getElementById("top-scroll-shadow")!;
  const btnPark = document.getElementById("btn-park")!;
  const btnShowParked = document.getElementById("btn-show-parked")!;
  const parkedOverlay = document.getElementById("parked-list-overlay")!;
  const parkedContainer = document.getElementById("parked-items-container")!;
  const btnCloseParked = document.getElementById("close-parked-list")!;

  // --- EVENT LISTENERS ---
  btnCheckout?.addEventListener("click", () => isPaymentModalOpen.set(true));

  btnPark?.addEventListener("click", () => {
    if (Object.keys(cartItems.get()).length > 0) parkCurrentCart();
  });

  const showParkedOverlay = () => {
    parkedOverlay?.classList.remove("hidden");
    parkedOverlay?.classList.add("flex");
  };
  const hideParkedOverlay = () => {
    parkedOverlay?.classList.add("hidden");
    parkedOverlay?.classList.remove("flex");
  };

  btnShowParked?.addEventListener("click", showParkedOverlay);
  btnCloseParked?.addEventListener("click", hideParkedOverlay);

  listEl?.addEventListener("scroll", () => {
    if (listEl.scrollTop > 10) topShadow?.classList.remove("opacity-0");
    else topShadow?.classList.add("opacity-0");
  });

  // --- LOGIC: TOTALS ---
  cartTotals.subscribe((totals) => {
    if (taxBreakdownEl) {
      if (totals.taxBreakdown.length > 0) {
        taxBreakdownEl.innerHTML = totals.taxBreakdown
          .map(
            (entry) =>
              `<div class="flex justify-between text-zinc-400 text-[10px] uppercase tracking-wide">
                <span>IGIC ${new Big(entry.rate).times(100).toFixed(1).replace(".0", "")}%</span>
                <span class="font-mono">${entry.amount} €</span>
              </div>`,
          )
          .join("");
      } else {
        taxBreakdownEl.innerHTML = "";
      }
    }
    if (grossEl) grossEl.innerText = `${totals.gross} €`;
    if (countEl) countEl.innerText = totals.count.toString();
    if (btnCheckout) btnCheckout.disabled = totals.count === 0;

    const gDisc = globalDiscount.get();

    if (gDisc) {
      rowSubtotal?.classList.remove("hidden");
      rowSubtotal?.classList.add("flex");

      rowDiscount?.classList.remove("hidden");
      rowDiscount?.classList.add("flex");

      if (valSubtotal) valSubtotal.innerText = `${totals.subtotal} €`;
      if (valDiscount) valDiscount.innerText = `-${totals.discountTotal} €`;

      if (gDisc.type === "percent") {
        lblDiscountPercent?.classList.remove("hidden");
        if (lblDiscountPercent)
          lblDiscountPercent.innerText = `${gDisc.value}%`;
      } else {
        lblDiscountPercent?.classList.add("hidden");
      }

      // Button Style ändern wenn Rabatt aktiv
      if (btnGlobalDiscount) {
        btnGlobalDiscount.classList.remove(
          "border-dashed",
          "border-zinc-300",
          "text-zinc-500",
        );
        btnGlobalDiscount.classList.add(
          "border-solid",
          "border-orange-200",
          "bg-orange-50",
          "text-orange-700",
        );
        btnGlobalDiscount.querySelector("span")!.innerText =
          "Rabatt bearbeiten";
      }
    } else {
      rowSubtotal?.classList.add("hidden");
      rowSubtotal?.classList.remove("flex");

      rowDiscount?.classList.add("hidden");
      rowDiscount?.classList.remove("flex");

      // Button Reset
      if (btnGlobalDiscount) {
        btnGlobalDiscount.classList.add(
          "border-dashed",
          "border-zinc-300",
          "text-zinc-500",
        );
        btnGlobalDiscount.classList.remove(
          "border-solid",
          "border-orange-200",
          "bg-orange-50",
          "text-orange-700",
        );
        btnGlobalDiscount.querySelector("span")!.innerText = "Rabatt";
      }
    }
  });

  // --- LOGIC: PARKED & ITEMS (Wie zuvor) ---
  parkedCarts.subscribe((carts) => {
    const ids = Object.keys(carts);
    if (ids.length > 0) btnShowParked?.classList.remove("hidden");
    else {
      btnShowParked?.classList.add("hidden");
      hideParkedOverlay();
    }

    if (parkedContainer) {
      parkedContainer.innerHTML = "";
      ids.forEach((id) => {
        const cart = carts[id];
        const div = document.createElement("div");
        div.className =
          "bg-white p-3 rounded-xl border border-zinc-200 shadow-sm flex justify-between items-center group hover:border-blue-300 transition-colors cursor-pointer";
        div.onclick = (e) => {
          if (!(e.target as HTMLElement).closest("button")) {
            window.parkActions.restore(id);
          }
        };
        div.innerHTML = `
              <div class="flex-1">
                  <div class="font-bold text-zinc-800 text-sm mb-0.5">${cart.customerName}</div>
                  <div class="text-xs text-zinc-500 font-mono flex items-center gap-2">
                      <span class="bg-zinc-100 px-1.5 rounded text-zinc-600 border border-zinc-100">${cart.total} €</span>
                      <span>${new Date(cart.timestamp).toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" })}</span>
                  </div>
              </div>
              <button onclick="window.parkActions.delete('${id}')" class="p-2 text-zinc-300 hover:text-red-500 hover:bg-red-50 rounded-lg transition-colors z-10 relative">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
              </button>
          `;
        parkedContainer.appendChild(div);
      });
    }
  });

  cartItems.subscribe((items) => {
    const entries = Object.entries(items);
    if (!listEl) return;
    if (entries.length === 0) {
      listEl.innerHTML = `<div class="h-full flex flex-col items-center justify-center text-zinc-300 gap-2 opacity-50 select-none"><svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" /></svg><span class="text-xs font-medium">Leer</span></div>`;
      return;
    }
    listEl.innerHTML = "";
    entries.forEach(([id, item]) => {
      const div = document.createElement("div");
      const hasDiscount = !!item.discount;
      const originalPriceTotal = new Big(item.priceGross).times(item.quantity);
      let finalPriceTotal = originalPriceTotal;
      let discountLabel = "";
      if (item.discount) {
        if (item.discount.type === "percent") {
          discountLabel = `-${item.discount.value}%`;
          finalPriceTotal = originalPriceTotal.times(
            new Big(1).minus(new Big(item.discount.value).div(100)),
          );
        } else {
          discountLabel = `-${new Big(item.discount.value).toFixed(2)}€`;
          const discounted = originalPriceTotal.minus(item.discount.value);
          finalPriceTotal = discounted.lt(0) ? new Big(0) : discounted;
        }
      }
      const itemJson = JSON.stringify(item).replace(/"/g, "&quot;");
      const isSingleItem = item.quantity === 1;
      const minusBtnClass = isSingleItem
        ? "text-red-500 hover:bg-red-50"
        : "text-zinc-500 hover:bg-zinc-100";
      const minusIcon = isSingleItem
        ? `<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>`
        : `<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M20 12H4" /></svg>`;

      div.className =
        "flex items-center justify-between p-3 hover:bg-zinc-50 transition-colors group animate-in fade-in slide-in-from-right-2 duration-200 select-none";
      div.innerHTML = `
          <div class="flex-1 min-w-0 pr-3">
              <h4 class="font-semibold text-zinc-800 text-sm leading-tight truncate mb-0.5" title="${item.name}">${item.name}</h4>
              <div class="flex items-center gap-2">
                  <p class="text-[10px] text-zinc-400 font-medium">${new Big(item.priceGross).toFixed(2)} €/Stk.</p>
                  <button onclick="window.cartActions.openDiscount('${id}')" class="text-[9px] px-1.5 py-0.5 rounded-md font-bold transition-colors ${hasDiscount ? "bg-orange-100 text-orange-700 border border-orange-200" : "bg-zinc-100 text-zinc-500 border border-zinc-200 hover:bg-zinc-200"}">
                      ${hasDiscount ? discountLabel : "+ Rabatt"}
                  </button>
              </div>
          </div>
          <div class="flex flex-col items-end gap-1">
              <div class="flex flex-col items-end leading-none mb-1">
                  ${hasDiscount ? `<span class="text-[10px] text-zinc-400 line-through mb-0.5">${originalPriceTotal.toFixed(2)} €</span>` : ""}
                  <span class="font-bold ${hasDiscount ? "text-orange-600" : "text-zinc-900"} text-sm tabular-nums tracking-tight">
                      ${finalPriceTotal.toFixed(2)} €
                  </span>
              </div>
              <div class="flex items-center bg-white rounded-lg border border-zinc-200 shadow-sm h-9">
                  <button class="w-10 h-full flex items-center justify-center rounded-l-lg transition-colors border-r border-zinc-100 active:bg-zinc-200 ${minusBtnClass}" onclick="window.cartActions.decrease('${id}')">${minusIcon}</button>
                   <button 
                      onclick="window.cartActions.openQuantity('${id}')"
                      class="w-10 h-full text-center font-bold text-sm text-zinc-900 tabular-nums hover:bg-zinc-50 hover:text-blue-600 transition-colors"
                      title="Menge ändern"
                  >
                      ${item.quantity}
                  </button>
                  <button class="w-10 h-full flex items-center justify-center text-zinc-500 hover:bg-zinc-100 rounded-r-lg transition-colors border-l border-zinc-100 active:bg-zinc-200" onclick="window.cartActions.add('${itemJson}')"><svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4" /></svg></button>
              </div>
          </div>
      `;
      listEl.appendChild(div);
    });
  });
</script>
