---
import type { CollectionEntry } from "astro:content";
import SectionHeader from "../../ui/SectionHeader.astro";
import { t } from "../../../utils/t";
import { convertI18n } from "../../../content/utils";
import { Image } from "astro:assets";
import type { DirectusFile } from "@directus/sdk";

type Props = {
  lang: CollectionEntry<"languages">["data"];
  defaultLang: CollectionEntry<"languages">["data"];
  data: any;
};

const { data, lang, defaultLang } = Astro.props;

const awards: { src: string; alt: string; height: number; width: number }[] = (
  data.images ?? []
).map(({ directus_files_id }: any) => {
  const image: DirectusFile = directus_files_id;
  const src = `${import.meta.env.DIRECTUS_URL}/assets/${
    image.id
  }?access_token=${
    import.meta.env.DIRECTUS_TOKEN
  }&width=1500&withoutEnlargement=true`;

  return {
    src: src,
    alt: image.filename_disk,
    height: image.height,
    width: image.width,
  };
});

const title = t(
  convertI18n(data?.translations, "title", defaultLang.code),
  lang?.code
);
const subtitle = t(
  convertI18n(data?.translations, "subtitle", defaultLang.code),
  lang?.code
);
const text = t(
  convertI18n(data?.translations, "text", defaultLang.code),
  lang?.code
);
const author = t(
  convertI18n(data?.translations, "author", defaultLang.code),
  lang?.code
);
---

<section class="relative bg-background py-16 md:py-24 px-6 overflow-hidden">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <SectionHeader subtitle={subtitle} title={title} />

    <!-- Main Content Grid -->
    <div
      class="flex flex-col lg:grid lg:grid-cols-2 gap-12 lg:gap-24 items-center"
    >
      <!-- Desktop: Vertical Marquee -->
      <div class="hidden lg:block relative h-125 w-full overflow-hidden group">
        <div
          class="absolute inset-x-0 top-0 h-20 bg-linear-to-b from-background to-transparent z-10"
        >
        </div>
        <div
          class="absolute inset-x-0 bottom-0 h-20 bg-linear-to-t from-background to-transparent z-10"
        >
        </div>

        <div
          class="grid grid-cols-2 gap-4 animate-marquee-vertical group-hover:[animation-play-state:paused]"
        >
          {
            awards.slice(0, 16).map((award) => (
              <div class="aspect-square flex items-center justify-center p-6 bg-white/3 border border-white/10 rounded-2xl transition-all duration-700">
                <Image
                  src={award.src}
                  alt={award.alt}
                  width={award.width}
                  height={award.height}
                  class="max-w-[80%] h-auto object-contain"
                />
              </div>
            ))
          }
        </div>
      </div>

      <!-- Text Content -->
      <div class="flex flex-col justify-center order-first lg:order-0">
        <div class="relative">
          <span
            class="text-5xl md:text-7xl text-white/10 font-serif absolute -top-6 -left-4 md:-top-10 md:-left-8 select-none"
            >“</span
          >
          <p
            class="text-lg md:text-2xl font-serif italic text-gray-300 leading-relaxed tracking-wide relative z-10"
          >
            {text}
          </p>
        </div>

        <!-- Desktop Label -->
        <div class="hidden lg:flex mt-10 items-center gap-4">
          <div class="h-px w-12 bg-white/20"></div>
          <span class="text-xs tracking-[0.4em] text-white/40 uppercase"
            >{author}</span
          >
        </div>
      </div>

      <!-- Mobile: Horizontal Marquee -->
      <div class="lg:hidden w-full overflow-hidden py-4">
        <!-- Mobile Label (Über den Awards wie im Screenshot) -->
        <div class="flex items-center justify-center gap-4 mb-8">
          <div class="h-px w-8 bg-white/10"></div>
          <span class="text-[10px] tracking-[0.4em] text-white/40 uppercase"
            >{author}</span
          >
          <div class="h-px w-8 bg-white/10"></div>
        </div>

        <div class="relative">
          <!-- Maskierung für weiche Kanten ohne Striche -->
          <div
            class="absolute inset-y-0 left-0 w-12 bg-linear-to-r from-background to-transparent z-10"
          >
          </div>
          <div
            class="absolute inset-y-0 right-0 w-12 bg-linear-to-l from-background to-transparent z-10"
          >
          </div>

          <div class="flex animate-marquee-horizontal">
            {
              awards.map((award) => (
                <div class="flex-none w-32 mx-3 aspect-square flex items-center justify-center p-4 bg-white/4 rounded-xl">
                  <img
                    src={award.src}
                    alt={award.alt}
                    class="max-w-full h-auto object-contain"
                  />
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Desktop Animation */
  @keyframes marquee-vertical {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-50%);
    }
  }

  /* Mobile Animation */
  @keyframes marquee-horizontal-fast {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-33.333%);
    }
  }

  .animate-marquee-vertical {
    animation: marquee-vertical 25s linear infinite;
  }

  .animate-marquee-horizontal {
    animation: marquee-horizontal-fast 25s linear infinite;
    display: flex;
    width: max-content;
  }

  img,
  div {
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
  }
</style>
