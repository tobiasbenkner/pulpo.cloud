---
import { getCollection } from "astro:content";
import About from "../../components/blocks/About.astro";
import Carousel from "../../components/blocks/Carousel.astro";
import Contact from "../../components/blocks/Contact.astro";
import Hero from "../../components/blocks/Hero.astro";
import Schedule from "../../components/blocks/Schedule.astro";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const languages = await getCollection("languages");
  const result = languages.map((it) => {
    return { params: { lang: it.data.code } };
  });
  result.push({ params: { lang: undefined as any } });
  return result;
}
