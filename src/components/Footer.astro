---
import { getEntry } from "astro:content";
import Icon from "./ui/Icon.astro";

const currentYear = new Date().getFullYear();
const entry = await getEntry("tenant", "1");
const tenant = entry?.data;

const links = [
  { label: "Inicio", href: "/" },
  { label: "Menú", href: "/menu" },
  { label: "Contacto", href: "/contact" },
];

const legal = [
  { label: "Aviso Legal", href: "/legal" },
  { label: "Política de Privacidad", href: "/privacidad" },
  { label: "Cookies", href: "/cookies" },
];
---

<footer
  class="bg-[#050505] text-white pt-24 pb-12 relative overflow-hidden border-t border-white/5"
>
  <!-- Dekorativer "Schein" im Hintergrund -->
  <div
    class="absolute top-0 left-1/2 -translate-x-1/2 w-1/2 h-px bg-linear-to-r from-transparent via-amber-200/20 to-transparent"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6">
    <!-- Grid jetzt optimiert auf 3 Hauptspalten -->
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 lg:gap-8 mb-20"
    >
      <!-- Spalte 1: Brand -->
      <div class="lg:col-span-5 space-y-8">
        <!-- Logo -->
        <a href="/" class="block">
          <img
            src="/chiquita.webp"
            alt="Logo"
            class="h-16 w-auto opacity-90 grayscale hover:grayscale-0 transition-all duration-500"
          />
        </a>

        <p
          class="text-gray-500 font-serif italic text-lg leading-relaxed max-w-sm"
        >
          Pasión, fuego y tradición argentina en el corazón de Las Palmas. Donde
          cada brasa cuenta una historia.
        </p>

        <!-- Social Icons -->
        <div class="flex gap-4">
          {
            Object.keys(tenant?.social ?? {}).map((key) => (
              <a
                href={(tenant?.social as any)[key]}
                target="_blank"
                aria-label={key}
                class="w-10 h-10 flex items-center justify-center rounded-full border border-white/10 text-gray-400 hover:text-amber-200 hover:border-amber-200/50 hover:bg-white/5 transition-all duration-300"
              >
                <Icon name={key as any} size={26} />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Spalte 2: Navigation -->
      <div class="lg:col-span-3 lg:pl-4">
        <h3 class="text-xs tracking-[0.3em] uppercase text-amber-200/50 mb-8">
          Explorar
        </h3>
        <ul class="space-y-4">
          {
            links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm tracking-[0.2em] uppercase text-gray-400 hover:text-white transition-colors duration-300 flex items-center gap-2 group"
                >
                  <span class="w-0 h-px bg-amber-200 transition-all duration-300 group-hover:w-4" />
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Spalte 3: Kontakt & CTA -->
      <div class="lg:col-span-4">
        <h3 class="text-xs tracking-[0.3em] uppercase text-amber-200/50 mb-8">
          Visítanos
        </h3>

        <div class="flex flex-col gap-8">
          <!-- Adresse & Kontakt -->
          <div class="space-y-4">
            <div class="space-y-1 text-gray-400 font-serif italic">
              <p>{tenant?.address}</p>
            </div>
            <div class="space-y-1">
              <a
                href="tel:+34928123456"
                class="block text-white hover:text-amber-200 transition-colors tracking-widest text-sm"
                >+34 928 123 456</a
              >
              <a
                href="mailto:hola@elbuho.com"
                class="block text-gray-500 hover:text-white transition-colors tracking-widest text-sm"
                >hola@elbuho.com</a
              >
            </div>
          </div>

          <div>
            <a
              href="/contact"
              class="group inline-flex items-center gap-3 px-8 py-3 border border-amber-200/30 text-amber-200 hover:bg-amber-200 hover:text-black transition-all duration-500"
            >
              <span class="text-[10px] uppercase tracking-[0.3em] font-bold"
                >Reservar Mesa</span
              >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="group-hover:translate-x-1 transition-transform"
                ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
              >
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6"
    >
      <p class="text-[10px] tracking-[0.2em] uppercase text-gray-600">
        © {currentYear} El Búho Tuerto.
      </p>

      <div class="flex flex-wrap gap-6 justify-center">
        {
          legal.map((item) => (
            <a
              href={item.href}
              class="text-[10px] tracking-widest uppercase text-gray-600 hover:text-gray-400 transition-colors"
            >
              {item.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
