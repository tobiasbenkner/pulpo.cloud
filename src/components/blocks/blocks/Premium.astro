---
// Falls du die Schriften zentral verwaltest, kannst du sie hier nutzen.
// Die Awards können als Array übergeben werden.
const awards = [
  { src: "https://www.pulpo.cloud/api/files/oejuxb8pu427psz/kn3uedrg4n3skfq/2025_removebg_preview_bNgjSkZk6Z.png", alt: "Tripadvisor Travelers Choice 2024" },
  { src: "https://www.pulpo.cloud/api/files/oejuxb8pu427psz/kn3uedrg4n3skfq/imagen_de_whats_app_2025_10_16_a_las_11_07_PEEq8yjgcu.47_acf6d49e.jpg", alt: "Mejor Restaurante Asador" },
  { src: "https://www.pulpo.cloud/api/files/oejuxb8pu427psz/kn3uedrg4n3skfq/8191ecb2_6f39_4cc0_ab3d_5a852438c171_WSviRxa7aZ.JPG", alt: "Certificado de Excelencia" },
  { src: "https://www.pulpo.cloud/api/files/oejuxb8pu427psz/kn3uedrg4n3skfq/medium_whats_app_image_2023_05_16_at_10_28_21_80bc106aab_JoloAt8mCe.jpeg", alt: "Certificado de Excelencia" },
];

const title = "Premios";
const description = "Con pasión, fuego y los mejores ingredientes, llevamos la auténtica experiencia del asado argentino a tu mesa. Nuestra dedicación ha sido premiada en múltiples ocasiones: somos orgullosos ganadores de varios reconocidos premios, una prueba de calidad, sabor y verdadero arte en la parrilla.";
---

<section class="relative bg-background py-24 px-6 overflow-hidden">
  <div class="max-w-6xl mx-auto">
    
    <!-- Überschrift mit eleganter Linie -->
    <div class="flex flex-col items-center mb-20 text-center">
      <h2 class="text-3xl md:text-5xl font-light tracking-[0.3em] text-white uppercase mb-6">
        {title}
      </h2>
      <div class="relative w-48 h-px bg-linear-to-r from-transparent via-white/40 to-transparent">
        <div class="absolute inset-0 blur-sm bg-white/20"></div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 items-center">
      
      <!-- Linke Seite: Award Grid -->
      <div class="grid grid-cols-2 gap-4 md:gap-8">
        {awards.map((award) => (
          <div class="group relative aspect-square flex items-center justify-center p-6 bg-white/3 border border-white/10 rounded-2xl overflow-hidden transition-all duration-700 hover:bg-white/[0.07] hover:border-white/20">
            <!-- Subtiler Glanz-Effekt beim Hover -->
            <div class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 bg-linear-to-r from-transparent via-white/5 to-transparent"></div>
            
            <img 
              src={award.src} 
              alt={award.alt} 
              class="max-w-full h-auto object-contain"
            />
          </div>
        ))}
      </div>

      <!-- Rechte Seite: Beschreibung -->
      <div class="flex flex-col justify-center">
        <p class="text-xl md:text-2xl font-serif italic text-gray-300 leading-relaxed tracking-wide">
          <span class="text-5xl text-white/20 font-serif absolute -mt-6 -ml-4">“</span>
          {description}
        </p>
        
        <!-- Optionaler kleiner Akzent unten -->
        <div class="mt-10 flex items-center gap-4">
            <div class="h-px w-12 bg-white/20"></div>
            <span class="text-xs tracking-[0.4em] text-white/40 uppercase">Excelencia & Tradición</span>
        </div>
      </div>

    </div>
  </div>
</section>
