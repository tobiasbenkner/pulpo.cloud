---
import Layout from "../../layouts/Layout.astro";
import { ui } from "../../i18n/ui";

// Komponenten Importieren
import Navbar from "../../components/Navbar.astro";
import Hero from "../../components/Hero.astro";
import Teachers from "../../components/Teachers.astro";
import Classes from "../../components/Classes.astro";
import Schedule from "../../components/Schedule.astro";
import Booking from "../../components/Booking.astro";
import Footer from "../../components/Footer.astro";

export function getStaticPaths() {
  return [
    { params: { lang: "es" } },
    { params: { lang: "en" } },
    { params: { lang: "de" } },
  ];
}

const { lang } = Astro.params;
const t = ui[lang];

if (!lang) return Astro.redirect("/es");
---

<Layout title="VibraDance Academy | Maspalomas" lang={lang}>
  <Navbar lang={lang} t={t} />

  <main>
    <Hero t={t} />
    <Schedule t={t} />
    <Teachers t={t} />
    <Classes t={t} />
    <Booking t={t} />
  </main>

  <Footer t={t} />
</Layout>
