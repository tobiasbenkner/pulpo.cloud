---
import "../styles/global.css";
import { Image } from "astro:assets";
import faviconSrc from "../assets/favicon.png";

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- Nutzung von .src fÃ¼r den optimierten Pfad -->
    <link rel="icon" type="image/png" href={faviconSrc.src} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400..700;1,400&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body class="antialiased selection:bg-vibra-pink selection:text-white">
    <slot />
  </body>
</html>
