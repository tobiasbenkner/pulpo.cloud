---
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";
import siteData from "../data/site.json";

interface Props {
  t: any;
}
const { t } = Astro.props;
---

<footer id="contact" class="bg-vibra-text-main text-white pt-24 pb-12">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid md:grid-cols-2 gap-20 mb-20">
      <!-- Info -->
      <div>
        <div class="mb-12 brightness-0 invert opacity-80">
          <Image src={logoImage} alt="VibraDance" class="h-10 w-auto" />
        </div>

        <div class="space-y-10 font-light">
          <div>
            <p class="text-xs uppercase tracking-widest text-gray-500 mb-4">
              {t.footer.address}
            </p>
            <p class="text-xl font-medium text-vibra-teal mb-1">
              {siteData.location.complex}
            </p>
            <p class="text-xl">{siteData.location.street}</p>
            <p class="text-xl text-gray-400">
              {siteData.location.zip}
              {siteData.location.city}
            </p>
          </div>

          <div>
            <p class="text-xs uppercase tracking-widest text-gray-500 mb-4">
              {t.footer.contact}
            </p>
            <a
              href={`mailto:${siteData.contact.email}`}
              class="block text-xl hover:text-vibra-pink transition-colors mb-2"
              >{siteData.contact.email}</a
            >
            <a
              href={`tel:${siteData.contact.phoneCall}`}
              class="block text-xl hover:text-vibra-pink transition-colors"
              >{siteData.contact.phoneDisplay}</a
            >
          </div>

          <div>
            <a
              href={siteData.social.whatsapp}
              target="_blank"
              class="inline-flex items-center gap-2 text-green-400 hover:text-green-300 transition-colors uppercase tracking-widest text-xs border-b border-green-400/30 pb-1"
            >
              {t.footer.whatsapp_btn}
            </a>
          </div>
        </div>
      </div>

      <!-- Map -->
      <div class="h-full min-h-75 w-full bg-gray-800 relative">
        <iframe
          src={siteData.integrations.googleMaps}
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        >
        </iframe>
        <div
          class="absolute inset-0 pointer-events-none border border-white/10"
        >
        </div>
      </div>
    </div>

    <div
      class="flex flex-col md:flex-row justify-between items-center pt-8 border-t border-gray-800 text-xs text-gray-500 tracking-wider uppercase"
    >
      <p>&copy; {new Date().getFullYear()} {siteData.name}.</p>
      <p class="mt-4 md:mt-0">{t.footer.slogan}.</p>
    </div>
  </div>
</footer>
