---
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";

interface Props {
  lang: string;
  t: any;
}

const { lang, t } = Astro.props;
---

<nav class="fixed w-full z-50 glass-panel-light transition-all duration-300">
  <div class="max-w-7xl mx-auto px-6 py-3 flex justify-between items-center">
    <a href={`/${lang}`} class="block hover:opacity-80 transition-opacity">
      <Image
        src={logoImage}
        alt="VibraDance Academy Logo"
        class="h-12 w-auto object-contain"
        loading="eager"
      />
    </a>

    <div
      class="hidden md:flex gap-10 text-xs font-medium tracking-widest uppercase text-vibra-text-main"
    >
      <a href="#teachers" class="hover:text-vibra-teal transition-colors"
        >{t.nav.teachers}</a
      >
      <a href="#classes" class="hover:text-vibra-teal transition-colors"
        >{t.nav.classes}</a
      >
      <a href="#schedule" class="hover:text-vibra-teal transition-colors"
        >{t.nav.schedule}</a
      >
      <a href="#contact" class="hover:text-vibra-teal transition-colors"
        >{t.nav.contact}</a
      >
    </div>

    <div class="flex gap-4 text-xs font-bold tracking-widest">
      <a
        href="/es"
        class={`transition-colors ${lang === "es" ? "text-vibra-pink" : "text-gray-400 hover:text-black"}`}
        >ES</a
      >
      <a
        href="/en"
        class={`transition-colors ${lang === "en" ? "text-vibra-pink" : "text-gray-400 hover:text-black"}`}
        >EN</a
      >
      <a
        href="/de"
        class={`transition-colors ${lang === "de" ? "text-vibra-pink" : "text-gray-400 hover:text-black"}`}
        >DE</a
      >
    </div>
  </div>
</nav>
