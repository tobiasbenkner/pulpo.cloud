---
import About from "./blocks/About.astro";
import Carousel from "./blocks/Carousel.astro";
import Contact from "./blocks/Contact.astro";
import ContactOptions from "./blocks/ContactOptions.astro";
import FoodMenuBlock from "./blocks/FoodMenuBlock.astro";
import Hero from "./blocks/Hero.astro";
import Schedule from "./blocks/Schedule.astro";

const { block, lang, defaultLang } = Astro.props;

const type = block.collection;
const data = block.item;
---

{
  type === "block_hero" && (
    <Hero data={data} lang={lang} defaultLang={defaultLang} />
  )
}
{
  type === "block_contact" && (
    <ContactOptions data={data} lang={lang} defaultLang={defaultLang} />
  )
}
{
  type === "block_address" && (
    <Contact data={data} lang={lang} defaultLang={defaultLang} />
  )
}
{
  type === "block_food_menu" && (
    <FoodMenuBlock data={data} lang={lang} defaultLang={defaultLang} />
  )
}
{
  type === "block_image_text" && (
    <About data={data} lang={lang} defaultLang={defaultLang} />
  )
}
{
  type === "block_carousel" && (
    <Carousel data={data} lang={lang} defaultLang={defaultLang} />
  )
}
{
  type === "block_schedule" && (
    <Schedule data={data} lang={lang} defaultLang={defaultLang} />
  )
}
