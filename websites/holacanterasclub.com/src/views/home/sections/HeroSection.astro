---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="relative h-screen w-full overflow-hidden -mt-16 md:-mt-20">
  <!-- Background Video -->
  <div class="absolute inset-0 w-full h-full">
    <video
      autoplay
      muted
      loop
      playsinline
      class="w-full h-full object-cover"
    >
      <source src="/hero.mp4" type="video/mp4" />
    </video>
    <!-- Dark overlay -->
    <div class="absolute inset-0 bg-black/40"></div>
  </div>

  <!-- Content - Bottom Left -->
  <div class="relative h-full flex items-end px-6 md:px-12 pb-16 md:pb-24">
    <div class="max-w-3xl">
      <h1 class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold mb-4 md:mb-6 text-white drop-shadow-lg">
        <span class="inline-block border-b-4 border-secondary pb-2">{title}</span>
      </h1>
      <p class="text-xl md:text-2xl lg:text-3xl text-text max-w-2xl drop-shadow-md">
        {subtitle}
      </p>
    </div>
  </div>
</section>
