---
import Container from "@/components/ui/Container.astro";

interface Props {
  quote: string;
  author: string;
}

const { quote, author } = Astro.props;
---

<section class="py-16 md:py-24 bg-surface">
  <Container>
    <div class="max-w-4xl mx-auto text-center">
      <!-- Quote icon -->
      <div class="mb-8">
        <svg
          class="w-16 h-16 md:w-20 md:h-20 mx-auto text-secondary/30"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"
          ></path>
        </svg>
      </div>

      <!-- Quote text -->
      <blockquote class="text-xl md:text-2xl lg:text-3xl text-text mb-8 italic leading-relaxed">
        "{quote}"
      </blockquote>

      <!-- Author -->
      <p class="text-secondary font-medium text-lg">
        â€” {author}
      </p>
    </div>
  </Container>
</section>
