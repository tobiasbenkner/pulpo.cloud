---
import Container from "@/components/ui/Container.astro";

interface Props {
  quote: string;
  author: string;
}

const { quote, author } = Astro.props;
---

<section class="py-16 md:py-24 bg-background">
  <Container>
    <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
      <!-- Quote text -->
      <div>
        <blockquote class="text-2xl md:text-3xl text-text italic leading-relaxed mb-6">
          "{quote}"
        </blockquote>
        <p class="text-secondary font-bold text-lg">
          â€” {author}
        </p>
      </div>

      <!-- Quote icon -->
      <div class="flex justify-center md:justify-end">
        <svg
          class="w-32 h-32 md:w-40 md:h-40 text-secondary opacity-30"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"
          ></path>
        </svg>
      </div>
    </div>
  </Container>
</section>
