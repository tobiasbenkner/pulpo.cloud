---
import Container from "@/components/ui/Container.astro";

interface Props {
  title: string;
  eventTitle: string;
  eventTime: string;
  eventDescription: string;
}

const { title, eventTitle, eventTime, eventDescription } = Astro.props;
---

<section class="py-16 md:py-24 bg-surface">
  <Container>
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-12 text-center text-secondary">
      {title}
    </h2>

    <div class="max-w-4xl mx-auto">
      <!-- Featured Event -->
      <div class="bg-background rounded-lg overflow-hidden border border-border hover:border-secondary/50 transition-all">
        <div class="aspect-video bg-gradient-to-br from-secondary/20 to-background flex items-center justify-center">
          <div class="text-center">
            <span class="text-6xl">ðŸ’ƒðŸ•º</span>
          </div>
        </div>
        <div class="p-6 md:p-8">
          <div class="flex flex-wrap items-center gap-4 mb-4">
            <h3 class="text-2xl md:text-3xl font-bold text-white">{eventTitle}</h3>
            <span class="bg-secondary text-background px-3 py-1 rounded-full text-sm font-bold">
              {eventTime}
            </span>
          </div>
          <p class="text-text-muted text-lg leading-relaxed">
            {eventDescription}
          </p>
        </div>
      </div>
    </div>
  </Container>
</section>
