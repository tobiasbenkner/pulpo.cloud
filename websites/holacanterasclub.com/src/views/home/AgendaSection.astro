---
import Container from "@/components/ui/Container.astro";

interface Props {
  title: string;
  specialEventsLabel: string;
  comingSoonLabel: string;
}

const { title, specialEventsLabel, comingSoonLabel } = Astro.props;
---

<section class="py-16 md:py-24 bg-surface">
  <Container>
    <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-12 text-center">
      {title}
    </h2>

    <div class="max-w-4xl mx-auto">
      <!-- Weekly Schedule placeholder -->
      <div class="bg-background/50 rounded-lg p-8 text-center mb-8">
        <p class="text-xl text-text-muted mb-4">
          {comingSoonLabel}
        </p>
        <p class="text-text-muted/70">
          {specialEventsLabel}
        </p>
      </div>

      <!-- Event preview grid - placeholder for future events -->
      <div class="grid md:grid-cols-2 gap-6">
        {
          [1, 2].map((i) => (
            <div class="bg-background/30 rounded-lg overflow-hidden hover:bg-background/40 transition-colors">
              <div class="aspect-video bg-surface/50" />
              <div class="p-6">
                <h3 class="text-xl font-bold mb-2">{comingSoonLabel}</h3>
                <p class="text-text-muted text-sm">
                  {specialEventsLabel}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </Container>
</section>
