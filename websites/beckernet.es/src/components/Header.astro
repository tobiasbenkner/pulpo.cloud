---
import Container from "@/components/ui/Container.astro";
import LanguageSwitcher from "@/components/LanguageSwitcher.astro";
import { siteData } from "@/data/siteData";
import { getTranslatedPath } from "@/lib/registry";
import type { Language } from "@/lib/i18n";

interface Props {
  lang: Language;
  routeKey: string;
}
const { lang, routeKey } = Astro.props;
---

<header
  class="sticky top-0 z-50 w-full border-b border-border/50 bg-surface/80 backdrop-blur-md"
>
  <Container>
    <div class="flex h-20 items-center justify-between">
      <a
        href={getTranslatedPath("home", lang)}
        class="text-xl font-bold font-serif text-primary"
      >
        Becker & Assoc.
      </a>
      <nav class="hidden md:flex items-center gap-6 text-sm font-medium">
        {
          siteData.navigation.map((item) => (
            <a
              href={getTranslatedPath(item.routeKey, lang)}
              class="text-text-muted transition-colors hover:text-primary"
            >
              {item.key.charAt(0).toUpperCase() + item.key.slice(1)}
            </a>
          ))
        }
      </nav>
      <div class="flex items-center gap-4">
        <LanguageSwitcher lang={lang} routeKey={routeKey} />
      </div>
    </div>
  </Container>
</header>
