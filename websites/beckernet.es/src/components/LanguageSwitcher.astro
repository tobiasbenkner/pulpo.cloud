---
import { languages } from "@/lib/i18n";
import { getTranslatedPath } from "@/lib/registry";
import type { Language } from "@/lib/i18n";

interface Props {
  lang: Language;
  routeKey: string;
}
const { lang, routeKey } = Astro.props;
---

<div class="flex items-center gap-3 text-xs font-bold tracking-widest">
  {
    languages.map((l) => (
      <a
        href={getTranslatedPath(routeKey, l)}
        hreflang={l}
        class:list={[
          "p-1 uppercase transition-colors duration-200",
          l === lang ? "text-secondary" : "text-text-muted hover:text-white",
        ]}
      >
        {l}
      </a>
    ))
  }
</div>
