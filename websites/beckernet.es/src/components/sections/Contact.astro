---
import { Icon } from "astro-icon/components";
import Container from "@/components/ui/Container.astro";
import { siteData } from "@/data/siteData";

interface Props {
  t: {
    headline: string;
    subheadline: string;
    email: string;
    phone: string;
    whatsapp: string;
  };
}
const { t } = Astro.props;
const { contact } = siteData;

const contactCards = [
  {
    href: `mailto:${contact.email}`,
    icon: "lucide:mail",
    title: t.email,
    value: contact.email,
  },
  {
    href: `tel:${contact.phone}`,
    icon: "lucide:phone",
    title: t.phone,
    value: contact.phone,
  },
  {
    href: `https://wa.me/${contact.whatsapp}`,
    icon: "lucide:message-circle",
    title: t.whatsapp,
    value: "Start Chat",
  },
];
---

<section id="contact" class="py-24 sm:py-32 bg-surface/50 dark:bg-black/20">
  <Container class="text-center">
    <h2 class="text-primary">{t.headline}</h2>
    <p class="mt-4 max-w-2xl mx-auto">{t.subheadline}</p>

    <div class="mt-16 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {
        contactCards.map((card) => (
          <a
            href={card.href}
            target="_blank"
            rel="noopener noreferrer"
            class="group block rounded-lg border border-border/60 bg-surface p-8 text-center shadow-sm transition-all duration-300 hover:shadow-lg hover:-translate-y-1 hover:border-primary/50"
          >
            <Icon
              name={card.icon}
              class="mx-auto h-10 w-10 text-primary transition-transform group-hover:scale-110"
            />
            <h3 class="mt-4 text-xl font-serif text-text">{card.title}</h3>
            <p class="mt-1 text-text-muted">{card.value}</p>
          </a>
        ))
      }
    </div>
  </Container>
</section>
  