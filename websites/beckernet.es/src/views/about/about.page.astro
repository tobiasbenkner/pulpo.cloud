---
import { Image } from "astro:assets";
import Container from "@/components/ui/Container.astro";
import { Icon } from "astro-icon/components";
import type { AboutTranslations } from "./about.i18n";
import aboutImage from "@/assets/hero.webp";

interface Props {
  lang: string;
  t: AboutTranslations;
}

const { t } = Astro.props;
---

<!-- Hero Section -->
<section class="pt-16 pb-12 sm:pt-24 sm:pb-20">
  <Container>
    <div class="max-w-3xl">
      <span
        class="text-secondary font-bold tracking-wider uppercase text-sm mb-4 block"
      >
        {t.hero.label}
      </span>
      <h1 class="text-primary mb-8">
        {t.hero.headline}
      </h1>
      <p class="text-xl md:text-2xl text-text-muted leading-relaxed font-serif">
        {t.hero.intro}
      </p>
    </div>
  </Container>
</section>

<!-- History Section -->
<section class="py-16 sm:py-24 border-t border-border">
  <Container>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <div class="relative order-2 lg:order-1">
        <div class="aspect-[4/3] w-full overflow-hidden rounded-sm bg-surface">
          <Image
            src={aboutImage}
            alt="Becker & Associates Office"
            class="h-full w-full object-cover grayscale opacity-80 hover:opacity-100 transition-opacity duration-500"
          />
        </div>
      </div>

      <div class="order-1 lg:order-2">
        <h2 class="text-primary mb-6">{t.history.title}</h2>
        <div class="prose prose-lg text-text-muted">
          <p class="mb-4">{t.history.p1}</p>
          <p>{t.history.p2}</p>
        </div>

        <div class="mt-8 flex items-center gap-4">
          <div class="h-px w-12 bg-secondary"></div>
          <span class="font-serif italic text-secondary">Est. 1999</span>
        </div>
      </div>
    </div>
  </Container>
</section>

<section
  class="py-16 sm:py-24 bg-surface/50 relative overflow-hidden border-y border-border"
>
  <div class="absolute top-0 right-0 p-12 opacity-[0.03] pointer-events-none">
    <Icon name="lucide:shield" class="w-64 h-64 text-white" />
  </div>

  <Container>
    <div class="max-w-2xl mb-16">
      <h2 class="text-white mb-4">{t.values.title}</h2>
      <div class="h-1 w-20 bg-secondary"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      <!-- Value 1 -->
      <div class="group">
        <div
          class="mb-4 inline-flex p-3 rounded-lg bg-white/5 text-secondary border border-white/10"
        >
          <Icon name="lucide:lock" class="w-6 h-6" />
        </div>
        <h3 class="text-xl font-bold mb-3 text-white">
          {t.values.list.trust.title}
        </h3>
        <p class="text-text-muted leading-relaxed">
          {t.values.list.trust.desc}
        </p>
      </div>

      <!-- Value 2 -->
      <div class="group">
        <div
          class="mb-4 inline-flex p-3 rounded-lg bg-white/5 text-secondary border border-white/10"
        >
          <Icon name="lucide:scale" class="w-6 h-6" />
        </div>
        <h3 class="text-xl font-bold mb-3 text-white">
          {t.values.list.integrity.title}
        </h3>
        <p class="text-text-muted leading-relaxed">
          {t.values.list.integrity.desc}
        </p>
      </div>

      <!-- Value 3 -->
      <div class="group">
        <div
          class="mb-4 inline-flex p-3 rounded-lg bg-white/5 text-secondary border border-white/10"
        >
          <Icon name="lucide:award" class="w-6 h-6" />
        </div>
        <h3 class="text-xl font-bold mb-3 text-white">
          {t.values.list.excellence.title}
        </h3>
        <p class="text-text-muted leading-relaxed">
          {t.values.list.excellence.desc}
        </p>
      </div>
    </div>
  </Container>
</section>

<!-- CTA -->
<section class="py-24">
  <Container class="text-center">
    <h2 class="mb-8">{t.cta.text}</h2>
    <a
      href="#contact"
      class="inline-flex items-center justify-center px-8 py-3 text-base font-bold text-background bg-secondary hover:bg-white rounded-sm transition-colors duration-200"
    >
      {t.cta.button}
    </a>
  </Container>
</section>
